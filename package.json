{
  "name": "checkout-backend",
  "version": "0.2.0",
  "description": "JCPM checkout backend",
  "author": "Bossabox",
  "contributors": [
    "Mateus Macedo dos Anjos",
    "Caio Leonardo Mendes de Sousa",
    "Claudio Alcantara",
    "Cleber Carvalho",
    "Flavio Vinicius Miranda",
    "Hudson Von Zuben",
    "Stefania Silva"
  ],
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=development nest start",
    "start:win": "cross-env NODE_ENV=development nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:dev:win": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:debug:win": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:staged": "eslint --fix",
    "test": "jest --passWithNoTests --runInBand --no-cache --detectOpenHandles --forceExit",
    "test:unit": "yarn test --config ./jest-unit.config.js",
    "test:staged": "yarn test --config ./jest-unit.config.js --findRelatedTests",
    "test:watch": "yarn test --watch --config ./jest-unit.config.js",
    "test:cov": "yarn test --coverage --config ./jest-unit.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --passWithNoTests --runInBand --no-cache --config ./jest-unit.config.js",
    "test:e2e": "yarn test --config ./jest-e2e.config.js",
    "prepare": "husky install",
    "snyk": "snyk test",
    "release": "standard-version",
    "changelog:minor": "standard-version --release-as minor && auto-changelog -p -u --commit-limit false --hide-credit --template changelog-template.hbs",
    "changelog:major": "standard-version --release-as major && auto-changelog -p -u --commit-limit false --hide-credit --template changelog-template.hbs",
    "changelog:patch": "standard-version --release-as patch && auto-changelog -p -u --commit-limit false --hide-credit --template changelog-template.hbs",
    "changelog:alpha": "standard-version --prerelease alpha && auto-changelog -p -u --commit-limit false --hide-credit --template changelog-template.hbs"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "@types/mongodb": "^4.0.7",
    "cache-manager": "^3.6.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cross-env": "^7.0.3",
    "joi": "^17.6.0",
    "mongodb": "^4.4.1",
    "redis": "^4.0.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.45",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/cache-manager": "^3.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.0",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^5.0.0",
    "auto-changelog": "^2.4.0",
    "commitlint": "^16.2.3",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.0.0",
    "faker-br": "^0.4.1",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "lint-staged": "^12.3.4",
    "mongodb-memory-server": "^8.4.1",
    "prettier": "^2.3.2",
    "snyk": "^1.861.0",
    "sonarqube-scanner": "^2.8.1",
    "source-map-support": "^0.5.20",
    "standard-version": "^9.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "4.5.5"
  },
  "standard-version": {
    "skip": {
      "changelog": true,
      "commit": true
    }
  }
}
